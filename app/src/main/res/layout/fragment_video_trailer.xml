<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/elevation"
    app:cardElevation="@dimen/elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/test_android"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/imageTrailer" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagePlayTrailer"
            android:layout_marginLeft="@dimen/space"
            android:layout_marginRight="@dimen/normal_padding"
            android:src="@android:drawable/ic_media_play"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageTrailer"
            android:layout_toEndOf="@+id/imageTrailer"
            android:layout_alignBottom="@+id/imageTrailer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="El Caballero de la Noche"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_marginTop="@dimen/navigation_elevation"
            android:id="@+id/textNameTrailer"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imagePlayTrailer"
            android:layout_toEndOf="@+id/imagePlayTrailer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tipo"
            android:id="@+id/typeTrailer"
            android:layout_alignLeft="@+id/textNameTrailer"
            android:layout_alignStart="@+id/textNameTrailer"
            android:layout_below="@+id/textNameTrailer"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageYoutube"
            android:src="@drawable/inside_youtube"
            android:layout_below="@+id/typeTrailer"
            android:layout_alignBottom="@+id/textYouTube"
            android:layout_alignLeft="@+id/typeTrailer"
            android:layout_alignStart="@+id/typeTrailer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="@string/youtube"
            android:textStyle="italic"
            android:id="@+id/textYouTube"
            android:layout_marginRight="@dimen/space"
            android:layout_marginEnd="@dimen/space"
            android:layout_marginBottom="@dimen/space"
            android:layout_alignBottom="@+id/imageTrailer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>