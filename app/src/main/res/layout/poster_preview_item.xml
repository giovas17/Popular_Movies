<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:minHeight="200dp"
        android:maxHeight="220dp"
        android:id="@+id/imagePosterItem" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:alpha="0.7"
        android:padding="7dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/imagePosterItem"
        android:layout_alignStart="@id/imagePosterItem"
        android:layout_alignRight="@id/imagePosterItem"
        android:layout_alignEnd="@id/imagePosterItem">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:id="@+id/textTitleMovie"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Popularity: "
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:id="@+id/textPopularity" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Rating: "
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:id="@+id/textRating" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>